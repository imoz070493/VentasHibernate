<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ventasdb</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">irving123456</property>
    
    <mapping class="Entity.Articulo"/>
    <mapping class="Entity.Categoria"/>
    <mapping class="Entity.Cliente"/>
    <mapping class="Entity.DetalleIngreso"/>
    <mapping class="Entity.DetalleVenta"/>
    <mapping class="Entity.Ingreso"/>
    <mapping class="Entity.Presentacion"/>
    <mapping class="Entity.Proveedor"/>
    <mapping class="Entity.Trabajador"/>
    <mapping class="Entity.Venta"/>
  </session-factory>
</hibernate-configuration>
